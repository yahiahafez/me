<%- include('partials/header') %>
<div class="form-container">
    <h2>

    Hi!</h2>
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form method="post">


<div class="signup-form">
    <div class="front-face1">
        <span class="text1">REGISTER</span>
        <span class="loader1"></span>
    </div>
        <form>
               <div class="form-group">
            <label for="firstName"> -- My First Name Is</label>
            <input type="text" name="firstName" id="firstName" class="form-control" value="<%= locals.firstName || '' %>" required />
        </div>
        <div class="form-group">
            <label for="lastName">-- My Last Name Is</label>
            <input type="text" name="lastName" id="lastName" class="form-control" value="<%= locals.lastName || '' %>" required />
        </div>
        <div class="form-group">
            <label for="username">-- I Would Like To Be Called</label>
            <input type="text" name="username" id="username" class="form-control" value="<%= locals.username || '' %>" required />
        </div>
        <div class="form-group">
            <label for="password">-- My Password</label>
            <input type="password" name="password" id="password" class="form-control" required />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Register</button>
            <a href="/login" class="btn btn-link">Cancel</a>
        </div>
        </form>

</div>

    </form>
</div>
<%- include('partials/footer') %>

<style>
.btn-link {
    font-weight: 400;
    color: #e80601;
    border-radius: 0;
}
</style>
<style>
.signup-form{
position:absolute;
width: 400px;
height: 400px;
left:40%;
top:50%;
background: #fff;
transform: translateX(-50%) translateY(-50%);
border-radius: 5px;
padding:20px;
box-sizing: border-box;
overflow: hidden;
}



.front-face1{
position:absolute;
left:0;
top:0;
width: 100%;
height: 100%;
background:#3b5998;
display: block;
transition : width 0.2s ease-in-out;
z-index:2;
}


.signup-form:hover .front-face1, signup-form.focused1>.front-face1{
width: 30px;
}



.signup-form:hover .front-face1>.text1, .signup-form.focused1>.front-face1>.text1{
font-size : 1rem;
transform: rotate(-90deg);
}

.signup-form.loading1 > .front-face1{
width:100%;
}

.signup-form.loading1 > .front-face1 > .text1{
display:none;
}

.signup-form.loading1 > .front-face1 > .loader1{
display: block;
}


.front-face1>.text1{
font-size: 5rem;
font-family: sans-serif,Arial;
color: #fff;
text-align:center;
display: block;
line-height: 300px;
transition: all 0.2s ease-in-out;
}


.signup-form>form{
width:200px;
margin:0 auto;
}

.signup-form>form>.input1{
width: 100 %;
height: 50px;
outline: none;
border:0px;
font-size: 20px;
font-family:sans-serif,Arial;
border-bottom: 2px solid #3b5998;
color:#3b5998;

}

.input-btn1{
width: 70px;
height: 70px;
background: #3b5998;
position: absolute;
bottom:15px;
right:15px;
z-index:1;
outline: none;
border:5px solid transparent;
border-radius: 50%;
cursor:pointer;
transition: all 0.2s ease-in-out;
}

.input-btn1:after{
content:"";
position: absolute;
width:0;
height:0;
border-left: 30px solid transparent;
border-right: 30px solid #fff;
border-bottom:30px solid transparent;
left:-15px;
transform:rotate(45deg);
top:5px;
transition: all 0.2s ease-in-out;
}

.input-btn1:hover, .input-btn1:focus, .input-btn1:active{
border: 5px solid #3b5998;
background: #fff;
}
.input-btn1:hover:after, .input-btn1:focus:after, .input-btn1:active:after{
border-right: 30px solid #3b5998;
}

.front-face1>.loader1{
display:none;
position: absolute;
width:150px;
height: 150px;
border: 2px solid #fff;
border-radius: 50%;
margin: 75px 75px;
animation:loading1 2s linear infinite;
}
.front-face1>.loader1:after{
content:"";
position:absolute;
left:65px;
top:-10px;
width:20px;
height:20px;
background:#fff;
border-radius:50%

}

@keyframes loading1{
    50%{
    opacity:0.5;
    }
    100%{
    transform: rotate(360deg);
    }
}
</style>




